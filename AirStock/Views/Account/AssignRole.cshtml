@model RoleAssignmentViewModel
<h2>Assign Role</h2>

<form asp-controller="Account" asp-action="AssignRole" method="post">
    <div class="form-group">
        <label asp-for="SelectedRole">Select Role:</label>
        <select asp-for="SelectedRole" asp-items="ViewBag.Roles" class="form-control"></select>
    </div>


    <div class="form-group">
        <label asp-for="SelectedUser">Select UserName:</label>
        <select asp-for="SelectedUser" asp-items="ViewBag.Users" class="form-control"></select>
    </div>

    @*<div class="form-group">
    <label asp-for="UserName">User Name</label>
    <input asp-for="UserName" class="form-control" required />
    </div>*@
    <button type="submit" class="btn btn-primary">Assign Role</button>
</form>